# LLM 프로바이더 설정
# 선택지: openai | openrouter | vertex
LLM_PROVIDER=openai

# OpenAI API 설정 (LLM_PROVIDER=openai 일 때 사용)
OPENAI_API_KEY=your_openai_api_key_here

# Vertex AI 설정 (LLM_PROVIDER=vertex 일 때 사용)
# Google Cloud 프로젝트/리전 및 자격증명 경로 필요
VERTEX_PROJECT_ID=your_gcp_project_id
VERTEX_LOCATION=us-central1
# 서비스 계정 키 JSON 파일 경로 (컨테이너/호스트 경로 일치 필요)
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-service-account.json
# Gemma 3 12B 기본 모델명 예시 (텍스트 전용)
GEMMA_MODEL=gemma-3-12b-instruct

# OpenRouter 설정 (LLM_PROVIDER=openrouter 일 때 사용)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Gemma 3 12B IT (free) 기본 모델명
# 참고: https://openrouter.ai/google/gemma-3-12b-it:free/api
# 필요 시 유료/다른 변형으로 교체 가능
# GEMMA_MODEL=google/gemma-3-12b-it:free

# 데이터베이스 설정
DATABASE_URL=postgresql://ragbot_user:ragbot_password@localhost:5432/ragbot

# Redis 설정
REDIS_URL=redis://localhost:6379

# MinIO 설정
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# 개발 설정
DEBUG=True

